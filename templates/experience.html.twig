<section id="experience" class="py-16 bg-gray-50">
	<div class="container mx-auto px-4">
		<div class="text-center mb-12" style="opacity: 1; transform: none;">
			<h2 class="text-3xl md:text-4xl font-bold mb-4 text-gray-800">{{ 'experience.title'|trans({}, 'globals') }}</h2>
			<div class="w-20 h-1 bg-primary mx-auto"></div>
		</div>
		<div class="max-w-4xl mx-auto">
			<div class="relative" style="opacity: 1;">
				<div class="absolute left-[6px] top-2 bottom-8 w-0.5 bg-gray-300"></div>
				{% for experience in experiences %}
					<div class="relative flex items-start mb-8 last:mb-0" style="opacity: 1; transform: none;">
						<div class="flex flex-col items-center mr-6 relative z-10">
							<div class="w-4 h-4 bg-primary rounded-full border-4 border-white shadow-md ml-[-7px]"></div>
						</div>
						<div class="bg-white rounded-lg shadow-sm p-6 flex-1 border-l-4 border-primary/20">
							<div class="text-primary font-medium text-sm mb-2">{{ experience.startAt|date("Y") }} - {{ experience.endAt|date("Y") != "now"|date("Y") ? experience.endAt|date("Y") : 'experience.now'|trans({}, 'globals') }}</div>
							<h3 class="text-xl font-semibold text-gray-800 mb-1">{{ experience.title }}</h3>
							<div class="text-gray-500 mb-3">{{ experience.company }}</div>
							<p class="text-gray-600 leading-relaxed">{{ experience.description }}</p>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
</section>
